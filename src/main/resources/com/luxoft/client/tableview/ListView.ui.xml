<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:wid='urn:import:com.luxoft.client.tableview'>
    <ui:with field="res" type="com.luxoft.client.tableview.ListViewResources"/>
    <gwt:VerticalPanel addStyleNames="{res.css.tableWidth}">
        <gwt:HorizontalPanel>
            <gwt:Button addStyleNames="{res.css.button}" ui:field="buttonCreate" text="Создать"/>
            <gwt:Button addStyleNames="{res.css.button}" ui:field="buttonEdit" text="Редактировать"/>
            <gwt:Button addStyleNames="{res.css.button}" ui:field="buttonDelete" text="Удалить"/>
        </gwt:HorizontalPanel>
        <gwt:HorizontalPanel addStyleNames="{res.css.tableWidth}">
            <gwt:ScrollPanel addStyleNames="{res.css.tableScrollHeight}">
                <wid:Table addStyleNames="{res.css.tableWidth}" ui:field="cellTable"/>
            </gwt:ScrollPanel>
        </gwt:HorizontalPanel>
    </gwt:VerticalPanel>
</ui:UiBinder>